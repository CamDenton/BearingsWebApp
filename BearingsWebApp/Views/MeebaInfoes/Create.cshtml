@model BearingsWebApp.Models.MeebaInfo

@{
    ViewBag.Title = "Create";
}


<style>
    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<button id="evtsBtn">Show Events</button>

<!-- The Modal -->
<div id="evtsModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <div id="evtsList"></div>
    </div>
</div>

<form method="post" action="@Url.Action("PostEvent", "MeebaInfoes")">
    Name: <input type="text" name="itemName" /><br />
    Category: <select name="category">
        <option value="Appointment">Appointment</option>
        <option value="Social">Social</option>
        <option value="Event">Event</option>
        <option value="Personal">Personal</option>
        <option value="Work">Work</option>
        <option value="Other">Other</option>
    </select><br />

    Polarity: <select name="pull">
        <option value="inner">Inner</option>
        <option value="Outer">Outer</option>
    </select><br />

    <input type="submit" value="Create Event" />
</form>

<script>
    // Get the modal
    var evtsModal = document.getElementById("evtsModal");

    // Get the button that opens the modal
    var evtsBtn = document.getElementById("evtsBtn");

    // Get the <span> element that closes the modal
    var evtsSpan = document.getElementsByClassName("close")[1];

   

    // When the user clicks the button, open the modal
    evtsBtn.onclick = function () {
        evtsModal.style.display = "block";
        GetEvents();
    }

    // When the user clicks on <span> (x), close the modal
    evtsSpan.onclick = function () {
        evtsModal.style.display = "none";
        CloseEvents();
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == evtsModal) {
            evtsModal.style.display = "none";
        }
    }

    function GetEvents() {
        $.get("@Url.Action("GetEvents", "MeebaInfoes")", function (serverResponse) {
            var events = JSON.parse(serverResponse);

            var eventsList = $("<ul>", { id: "lists" });
            $("#evtsList").append(eventsList);

            $(events).each(function (index, value) {
                var eachEvents = $("<li>", { id: "event" + index, "class": "evtsInList" });
                eachEvents.text(value.itemName + " " + value.category + " " + value.pull);
                eventsList.append(eachEvents);
            })
        });
    }

    function CloseEvents() {
        $("#evtsList").empty();
    }

</script>
