@model BearingsWebApp.Models.MeebaInfo

@{
    ViewBag.Title = "Create";
}

<style>
    input{
        width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    }

    input[type=submit]{
    background-color: mediumpurple;
    border: none;
    color: #FFF540;
    padding: 16px 32px;
    text-decoration: none;
    margin: 4px 2px;
    cursor: pointer;
    }

    select{
        width: 100%;
    padding: 16px 20px;
    border: none;
    border-radius: 4px;
    background-color: white;
    }
</style>


<form class="form-inline" method="post" action="@Url.Action("PostEvent", "MeebaInfoes")">
    <input type="text" name="itemName" placeholder="Enter Your Task's Name" /><br />
    <select name="category">
    <option selected disabled>Choose a Task Category</option>
        <option value="Appointment">Appointment</option>
        <option value="Social">Social</option>
        <option value="Event">Event</option>
        <option value="Personal">Personal</option>
        <option value="Work">Work</option>
        <option value="Other">Other</option>
    </select><br />

    <select name="pull">
    <option selected disabled>Choose a Task Polarity</option>
        <option value="Inner">Inner</option>
        <option value="Outer">Outer</option>
    </select><br />

    <input type="submit" value="Create Event" />
</form>


